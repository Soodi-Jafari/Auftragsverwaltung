@model IEnumerable<Auftrag>
@{
    ViewData["Title"] = "Auftragsverwaltung";
}

<div class="text-center">
    <h1 class="display-4">Auftragsübersicht</h1>
</div>


<form asp-controller="Auftrag" asp-action="Index" method="get" id="search_form" class="form-vertical">
    <div class="form-actions">
        <div class="form-group col-4">
            <label for="von" class="control-label">Von</label>
            <input type="date" id="von" name="von" class="form-control" />
        </div>
        <div class="form-group col-4">
            <label for="bis" class="control-label">Bis</label>
            <input type="date" id="bis" name="bis" class="form-control" />
        </div>
        <div class="form-group col-4">
            <button type="submit" class="btn btn-outline-dark">Suchen</button>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Nachname
            </th>
            <th>
                Vorname
            </th>
            <th>
                Datum
            </th>
            <th>
                Betrag
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kunde.Nachname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kunde.Vorname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Betrag)
                </td>
                <td>
                    <a class="btn btn-outline-dark" asp-controller="Auftrag" asp-action="Details" asp-route-id="@item.Id">Bearbeiten</a>
                </td>
            </tr>
        }
    </tbody>
</table>


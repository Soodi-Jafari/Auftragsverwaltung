@model AuftragsPositionen
@{
    var selectItems = ViewData["Artikel"] as SelectList;
}

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="AuftragId" />

<div class="form-group col-3">
    <label asp-for="Position" class="control-label"></label>
    <div>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
</div>

<div class="form-group col-3">
    <label asp-for="Artikel" class="control-label"></label>
    <div>
        <select asp-for="ArtikelId" asp-items="selectItems" class="form-control"></select>
        <span asp-validation-for="ArtikelId" class="text-danger"></span>
    </div>
</div>


<div class="form-group col-3">
    <label asp-for="Menge" class="control-label"></label>
    <div>
        <input asp-for="Menge" class="form-control" />
        <span asp-validation-for="Menge" class="text-danger"></span>
    </div>
</div>

